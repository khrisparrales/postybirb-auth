{
  "name": "postybirb-auth",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:b": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "now && now alias"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/mongoose": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "body-parser": "^1.18.3",
    "mastodon-api": "^1.3.0",
    "mongoose": "^5.5.1",
    "node-twitter-api": "^1.8.0",
    "oauth": "^0.9.15",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "requestretry": "^4.0.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "tumblr.js": "^2.0.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@nestjs/testing": "^6.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "now": {
    "alias": "postybirb-auth",
    "name": "postybirb-auth",
    "env": {
      "DA_KEY": "@da_key",
      "DA_SECRET": "@da_secret",
      "DB_PASSWORD": "@db_password",
      "MASTODON_KEY": "@mastodon_key",
      "MASTODON_SECRET": "@mastodon_secret",
      "MASTODON_ART_KEY": "@mastodon_art_key",
      "MASTODON_ART_SECRET": "@mastodon_art_secret",
      "TUMBLR_KEY": "@tumblr_key",
      "TUMBLR_SECRET": "@tumblr_secret",
      "TWITTER_KEY": "@twitter_key",
      "TWITTER_SECRET": "@twitter_secret"
    },
    "files": [
      "src",
      "nodemon.json",
      "package.json",
      "tsconfig.build.json",
      "tsconfig.json",
      "tslint.json"
    ],
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 2
      },
      "bru1": {
        "min": 1,
        "max": 2
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
